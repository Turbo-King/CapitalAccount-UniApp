.content {
  background: #377EB4;
  width: 100vw;
  height: 100vh;
}
.avatorWrapper {
  height: 30vh;
  width: 100vw;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
}
.avator {
  width: 500rpx;
  height: 200rpx;
  overflow: hidden;
  position: relative;
}
.avator .img {
  width: 150rpx;
  height: 150rpx;
  display: inline-block;
}
.avator .text {
  position: absolute;
  top: 26px;
  padding-left: 5px;
  font-size: 20px;
  font-weight: 25px;
  color: #e6cb83;
}
.form {
  padding: 0 100rpx;
  margin-top: 50px;
}
.inputWrapper {
  width: 100%;
  height: 80rpx;
  background: white;
  border-radius: 20px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 0 20px;
  margin-top: 25px;
}
.inputWrapper .input {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 15px;
}
.verification-input {
  width: 40%;
  height: 80rpx;
  background: white;
  border-radius: 20px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  margin-top: 25px;
  display: inline-block;
}
.verification-input .input {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 14px;
  font-weight: 14px;
}
.verification-code {
  width: 50%;
  display: inline-block;
  margin-top: 25px;
  float: right;
}
.verification-code image {
  width: 100%;
  border-radius: 20px;
}
.captcha {
  width: 50%;
}
.captcha input {
  width: 50%;
}
.loginBtn {
  width: 100%;
  height: 80rpx;
  background: #77B307;
  border-radius: 50rpx;
  margin-top: 50px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.loginBtn .btnValue {
  color: white;
}
.forgotBtn {
  color: #EAF6F9;
  font-size: 15px;
  margin-top: 20px;
}
.forgotBtn .telephoneLogin {
  margin-left: 30px;
  float: left;
}
.forgotBtn .forgetPassword {
  margin-right: 30px;
  float: right;
}
.active {
  color: red;
}
.loginActive {
  background: red;
}

